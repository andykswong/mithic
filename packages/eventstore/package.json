{
  "name": "@mithic/eventstore",
  "version": "0.3.0",
  "description": "Eventsourcing data store library for mithic",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "clean": "rimraf coverage docs dist",
    "prebuild": "npm run lint",
    "build": "npm run tsc && npm run babel",
    "lint": "eslint src --ext .ts",
    "babel": "babel src -d dist -x '.ts' --out-file-extension .js --root-mode upward",
    "tsc": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "doc": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andykswong/mithic.git"
  },
  "keywords": [
    "collaboration",
    "crdt",
    "decentralized",
    "event",
    "eventsourcing",
    "eventstore",
    "mithic",
    "offline-first",
    "typescript"
  ],
  "author": "Andy K.S. Wong <andykswong@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andykswong/mithic/issues"
  },
  "homepage": "https://github.com/andykswong/mithic",
  "dependencies": {
    "@mithic/collections": "^0.3",
    "@mithic/commons": "^0.3"
  },
  "optionalDependencies": {
    "multiformats": "^13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5",
    "@types/node": "^20.0",
    "multiformats": "^13.0"
  }
}
